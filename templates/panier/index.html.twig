{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1 class="text-center"> Panier</h1>
    {% if (panier) %}
        {% for pan in panier %}
            <div class="row border">
                {%  if pan.article.image is not null %}
                    <img class="col-2"src="{{ asset('images/articles/'~pan.article.image) }}" alt="paysage" height="100px" width="50px">
                {%  endif %}
                <div class="col-4 offset-2 text-center">  {{ pan.article.titre}}</div>
                <div class="col-4 text-center">  {{ pan.article.prix}}€</div>
            </div>
        {% endfor %}
        <div class ="row border">
            <div class="col-1 offset-9 text-right"> Total : </div>
            <div class="col-1 text-center">
                {% set total = 0 %}
                {% for pan in panier %}
                    {% set total = total + pan.article.prix %}
                {% endfor %}
                {{ total }}€
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <a href="/viderPanier" class="btn btn-danger"> Vider le panier</a>
            </div>
            <div class="col-2 offset-8">
                <a href="/validerPanier" class="btn btn-success"> Valider le panier</a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
